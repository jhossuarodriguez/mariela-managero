---
import { Image } from "astro:assets";

// Import project images
import EcommerceProject from "../assets/projects/image1.webp";
import CorporateProject from "../assets/projects/image2.webp";
import EducationalProject from "../assets/projects/image3.webp";
import SeoProject from "../assets/projects/image4.webp";

const projects = [
  {
    id: 1,
    title: "E-commerce Multiventa con WooCommerce",
    period: "2024",
    description:
      "Tienda online completa con sistema de vendedores múltiples, integración de pagos, gestión de inventario automatizada y dashboard personalizado para administradores.",
    organization: "Proyecto Freelance",
    image: EcommerceProject,
    tags: ["WooCommerce", "PHP", "Multi-vendor", "Pagos Online"],
  },
  {
    id: 2,
    title: "Sitio Corporativo con Sistema de Reservas",
    period: "2024",
    description:
      "Sitio web empresarial con sistema de reservas en tiempo real, calendario integrado, notificaciones automáticas por email y panel de administración personalizado.",
    organization: "Cliente Corporativo",
    image: CorporateProject,
    tags: ["WordPress Custom", "Sistema de Reservas", "PHP", "MySQL"],
  },
  {
    id: 3,
    title: "Portal Educativo con LMS",
    period: "2023",
    description:
      "Plataforma educativa con Learning Management System, cursos online, seguimiento de progreso, certificaciones digitales y integración con sistemas de pago.",
    organization: "Institución Educativa",
    image: EducationalProject,
    tags: ["LearnDash", "LMS", "WordPress", "Certificaciones"],
  },
  {
    id: 4,
    title: "Optimización SEO & Performance",
    period: "2023-2024",
    description:
      "Auditorías completas de sitios WordPress, optimización de velocidad de carga, implementación de mejores prácticas SEO y mejora significativa en rankings de Google.",
    organization: "Múltiples Clientes",
    image: SeoProject,
    tags: ["SEO", "Performance", "Google Analytics", "Page Speed"],
  },
];

// Experiencias adicionales como Product Owner
const experiences = [
  {
    id: 1,
    title: "Analista de Requerimientos de Sistemas - CAID",
    period: "Dic 2024 - Presente",
    description:
      "Liderando análisis y documentación funcional para SISCAID, combinando experiencia técnica en desarrollo web con metodologías ágiles.",
    tags: ["Análisis de Requerimientos", "SISCAID", "Scrum", "Gestión Ágil"],
  },
  {
    id: 2,
    title: "Product Owner Certificada (SPOPC®)",
    period: "Certificación Vigente",
    description:
      "Aplicando metodologías Scrum en proyectos de desarrollo WordPress, optimizando entregas y coordinando equipos técnicos.",
    tags: [
      "Scrum Master",
      "Product Owner",
      "Metodologías Ágiles",
      "Gestión de Equipos",
    ],
  },
];
---

<section id="proyectos" class="py-20 px-4 sm:px-6 lg:px-8 bg-white">
  <div class="max-w-6xl mx-auto">
    <h2
      class="text-center text-primary mb-4 text-4xl md:text-2xl font-semibold leading-tight"
    >
      Proyectos WordPress
    </h2>
    <div class="w-20 h-1 bg-primary mx-auto mb-12"></div>

    <!-- Proyectos WordPress principales -->
    <div class="grid md:grid-cols-2 gap-8 mb-16">
      {
        projects.map((project) => (
          <div class="bg-white rounded-lg overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-300 group">
            <div class="relative overflow-hidden h-64">
              <Image
                src={project.image}
                alt={project.title}
                class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                width={540}
                height={256}
                loading="lazy"
                decoding="async"
              />
              <div class="absolute inset-0 bg-primary opacity-0 group-hover:opacity-90 transition-opacity duration-300 flex items-center justify-center">
                <div class="text-white text-center p-4">
                  <p class="font-semibold text-lg">{project.period}</p>
                  <p class="text-sm mt-2">{project.organization}</p>
                </div>
              </div>
            </div>

            <div class="p-6">
              <h3 class="text-primary mb-2 text-2xl md:text-xl font-semibold leading-snug">
                {project.title}
              </h3>
              <p class="text-sm text-primary-hover mb-3 font-medium">
                {project.period}
              </p>
              <p class="text-gray-700 mb-4 text-sm leading-relaxed">
                {project.description}
              </p>
              <div class="flex flex-wrap gap-2">
                {project.tags.map((tag: string) => (
                  <span class="px-3 py-1 bg-background-light text-primary rounded-full text-xs">
                    {tag}
                  </span>
                ))}
              </div>
            </div>
          </div>
        ))
      }
    </div>

    <!-- Experiencia adicional como Product Owner -->
    <div class="bg-background-light p-8 rounded-lg">
      <h3
        class="text-primary mb-6 text-center text-2xl md:text-xl font-semibold leading-snug"
      >
        Experiencia en Gestión de Proyectos
      </h3>
      <div class="grid md:grid-cols-2 gap-6">
        {
          experiences.map((experience) => (
            <div class="bg-white p-6 rounded-lg shadow-md">
              <h4 class="text-primary mb-2 font-semibold">
                {experience.title}
              </h4>
              <p class="text-sm text-primary-hover mb-3 font-medium">
                {experience.period}
              </p>
              <p class="text-gray-700 mb-4 text-sm leading-relaxed">
                {experience.description}
              </p>
              <div class="flex flex-wrap gap-2">
                {experience.tags.map((tag: string) => (
                  <span class="px-3 py-1 bg-background-light text-primary rounded-full text-xs">
                    {tag}
                  </span>
                ))}
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>
