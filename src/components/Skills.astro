---
const skills = [
  {
    name: "WordPress Development",
    level: 95,
    description: "Desarrollo de temas y plugins personalizados",
    icon: "wordpress",
  },
  {
    name: "PHP & MySQL",
    level: 90,
    description: "Programación backend y bases de datos",
    icon: "code",
  },
  {
    name: "WooCommerce",
    level: 88,
    description: "E-commerce y tiendas online completas",
    icon: "shopping",
  },
  {
    name: "JavaScript & jQuery",
    level: 85,
    description: "Interactividad frontend y funcionalidades dinámicas",
    icon: "javascript",
  },
  {
    name: "SEO & Performance",
    level: 92,
    description: "Optimización para motores de búsqueda y velocidad",
    icon: "seo",
  },
  {
    name: "HTML5 & CSS3",
    level: 93,
    description: "Maquetación responsive y diseño web moderno",
    icon: "html",
  },
  {
    name: "Scrum & Gestión Ágil",
    level: 90,
    description: "Product Owner certificada en metodologías ágiles",
    icon: "agile",
  },
  {
    name: "API REST & Integraciones",
    level: 87,
    description: "Conexión con servicios externos y APIs",
    icon: "api",
  },
];

