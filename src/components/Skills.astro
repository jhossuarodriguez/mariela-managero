      '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 9l3 3-3 3m5 0h3M5 20h14a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>',
    seo: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0zM10 7v3m0 0v3m0-3h3m-3 0H7"></path>',
    html: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zM7 3H5v12a2 2 0 002 2h2V3zM17 21a4 4 0 004-4V5a2 2 0 00-2-2h-4a2 2 0 00-2 2v12a4 4 0 004 4zM17 3h2v12a2 2 0 01-2 2h-2V3z"></path>',
    agile:
      '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"></path>',
    api: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.111 16.404a5.5 5.5 0 017.778 0M12 20h.01m-7.08-7.071c3.904-3.905 10.236-3.905 14.141 0M1.394 9.393c5.857-5.857 15.355-5.857 21.213 0"></path>',
  };
  return icons[iconName as keyof typeof icons] || icons.code;
};
---

<section id="habilidades" class="py-20 px-4 sm:px-6 lg:px-8 bg-background-light">
  <div class="max-w-6xl mx-auto">
    <h2
      class="text-center text-primary mb-4 text-4xl md:text-2xl font-semibold leading-tight"
    >
      Habilidades & Tecnologías
    </h2>
    <div class="w-20 h-1 bg-primary mx-auto mb-12"></div>

    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6 mb-12">
      {
        skills.map((skill) => (
          <div class="bg-white p-6 rounded-lg shadow-lg hover-scale hover:shadow-xl">
            <div class="flex items-center mb-4">
              <div class="p-3 bg-primary rounded-lg mr-3">
                <svg
                  class="w-6 h-6 text-white"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                  set:html={getIconSvg(skill.icon)}
                />
              </div>
              <div class="flex-1">
                <h3 class="text-primary text-2xl md:text-xl font-semibold leading-snug">
                  {skill.name}
                </h3>
              </div>
            </div>
            <p class="text-gray-700 mb-3">{skill.description}</p>
            <div class="relative w-full h-2 bg-background-light rounded-full overflow-hidden">
              <div
                class="absolute top-0 left-0 h-full bg-primary rounded-full transition-all duration-1000"
                style={`width: ${skill.level}%`}
              />
            </div>
            <p class="text-right text-primary mt-1">{skill.level}%</p>
          </div>
        ))
      }
    </div>

    <div class="bg-white p-8 rounded-lg shadow-lg">
      <h3
        class="text-center text-primary mb-6 text-2xl md:text-xl font-semibold leading-snug"
      >
        Herramientas & Plataformas
      </h3>
      <div class="flex flex-wrap justify-center gap-4">
        {
          [
            "WordPress",
            "Elementor",
            "Advanced Custom Fields",
            "Yoast SEO",
            "WooCommerce",
            "Git",
            "cPanel",
            "MySQL",
            "Photoshop",
            "Figma",
            "Google Analytics",
            "Jira (Scrum)",
          ].map((tool) => (
            <span class="px-4 py-2 bg-primary text-white rounded-lg hover:bg-primary-hover transition-colors cursor-pointer">
              {tool}
            </span>
          ))
        }
      </div>
    </div>
  </div>
</section>
